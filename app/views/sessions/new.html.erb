
<div style="width: 500px" class="flex flex-col mx-auto">
  <div class="w-full bg-orange-100 rounded-lg p-4 mb-4">
    <span class="text-gray-600">Log in</span>
  </div>
  <div class="rounded-lg w-full bg-gray-100 p-4">
    <%= form_with(scope: :session, url: session_path, class: "flex flex-col") do |f| %>
      <div class="flex flex-col mb-4">
        <%= f.label :nickname, class: "text-sm text-gray-600" %>
        <% if @nickname %>
          <%= f.text_field :nickname, value: @nickname, class: "rounded-lg hover:border-blue-600 text-sm" %>
        <% else %>
          <%= f.text_field :nickname, class: "rounded-lg hover:border-blue-600 text-sm" %>
        <% end %>
      </div>
      <div class="flex flex-col mb-4">
        <%= f.label :password, class: "text-sm text-gray-600 #{"text-red-500" if @invalid_password}" %>
        <%= f.password_field :password, class: "rounded-lg hover:border-blue-600 text-sm" %>
        <% if @invalid_password %>
          <span class="text-red-500 text-xs">Ivalid password</span>
        <% end %>
      </div>
      <div class="flex justify-between items-center">
        <%= f.submit "Log in", data: {turbo: false}, class: "text-sm cursor-pointer p-2 rounded-lg button-link-orange" %>
        <%= link_to "Create new account?", new_user_path, class: "text-sm text-gray-600 button-link-gray" %>
      </div>
    <% end %>
  </div>
</div>

