<div class="orange-text-color mb-4">
  Statistics
</div>
<div class="flex flex-col text-sm space-y-2">
  <div class="room-statistics-item">
    <span class="text-gray-600">Game played:</span>
    <span class="orange-text-color"><%= room.total_games %></span>
  </div>
  <div class="room-statistics-item">
    <span class="text-gray-600">Last game played:</span>
    <span class="orange-text-color"><%= room.last_game_played %></span>
  </div>
  <% if room.has_estimate_statistics? %>
    <span class="text-gray-600">Estimate statistic: {</span>
    <% room.estimate_statistics.each do |k, v| %>
      <div class="flex">
        <div class="text-gray-600 mx-2">"<%= k %>" =></div>
        <span class="orange-text-color"><%= v %></span>
      </div>
    <% end %>
    <span class="text-gray-600">}</span>
  <% end %>
</div>
