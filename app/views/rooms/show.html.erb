<%= link_to rooms_path, data: {turbo: false} do %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
  </svg>
<% end %>

<div class="w-full">
  <div class="flex space-x-4 items-center justify-center w-full ">
  <% @estimates.each do |estimate| %>
    <div class="w-16 h-24 border border-black flex items-center justify-center rounded-lg bg-gray-100 hover:bg-blue-100 cursor-pointer duration-300">
      <%= estimate %>
    </div>
  <% end %>
</div>

<div class="flex flex-col w-96">
  <% @players.each do |player| %>
    <div class="flex flex-row items-center justify-between">
      <div><%= player.nickname %></div>
    </div>
  <% end %>
</div>
