<div class="flex flex-col w-full">
  <% if @rooms.present? %>
    <%= link_to "Create room",
      new_room_path,
      data: { action: "click->modal#open", turbo_frame: :modal },
      class: "text-sm p-3 rounded-lg button-link-orange w-max mb-6"
    %>
    <div class="grid grid-cols-3 gap-4 w-full">
      <% @rooms.each do |room| %>
        <%= link_to room_path(room) do %>
          <div class="bg-gray-100 p-3 border border-white hover:border-orange-300 hover:bg-orange-100 rounded-lg duration-300">
            <span class="text-sm text-gray-600"><%= room.name %></span>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Last game played:
                <span class="orange-text-color"><%= room.last_game_played %></span>
              </span>
              <span class="text-sm text-gray-600">Players:
                <span class="orange-text-color"><%= room.users.size %></span>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="mx-auto mt-10 flex flex-col space-y-2 items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#4b5563" data-slot="icon" class="w-12 h-12 mx-auto">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Zm3.75 11.625a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
      </svg>
      <span class="text-2xl text-gray-600">
        No data
      </span>
      <%= link_to "Create first room!",
                  new_room_path,
                  data: { action: "click->modal#open", turbo_frame: :modal },
                  class: "text-sm p-3 rounded-lg w-max mx-auto button-link-orange"
      %>
    </div>
  <% end %>
</div>
