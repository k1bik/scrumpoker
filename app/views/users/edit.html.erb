<%= turbo_frame_tag "modal" do %>
  <% invalid = @user.errors.present? %>
  <div class="w-80" data-action="turbo:submit-end->modal#submitEnd">
    <%= form_with(model: @user, url: user_path(@user), class: "flex flex-col") do |f| %>
      <div class="mb-4">
        <%= f.label :nickname, class: "text-sm text-gray-600 #{"text-red-500" if invalid}" %>
        <%= f.text_field :nickname, class: "w-full rounded-lg hover:border-blue-600 text-sm" %>
        <%= render "layouts/error_messages", model: @user, field: :nickname if invalid %>
      </div>
      <%= f.submit "Update", class: "text-sm cursor-pointer p-2 rounded-lg button-link-orange" %>
    <% end %>
  </div>
<% end %>
