<div class="flex flex-col w-1/2 space-y-2">
  <div class="w-full p-3 bg-orange-100 rounded-lg">
    <span class="text-gray-600">Not hidden</span>
  </div>
  <% if room.active_players.present? %>
    <div class="w-full rounded-lg p-3 bg-gray-100">
      <div class="flex flex-col space-y-2">
        <% room.active_players.each do |player| %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600"><%= player.nickname %></span>
            <%= button_to toggle_visibility_path,
                          method: :post,
                          params: {player_id: player.id, room_id: room.id, value: true} do
            %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#4b5563" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="flex flex-col w-1/2 space-y-2">
  <div class="w-full p-3 bg-orange-100 rounded-lg">
    <span class="text-gray-600">Hidden</span>
  </div>
  <% if room.hidden_players.present? %>
    <div class="w-full rounded-lg p-3 bg-gray-100">
      <div class="flex flex-col space-y-2">
        <% room.hidden_players.each do |player| %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600"><%= player.nickname %></span>
            <%= button_to toggle_visibility_path,
                          method: :post,
                          params: {player_id: player.id, room_id: room.id, value: false} do
            %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#4b5563" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
